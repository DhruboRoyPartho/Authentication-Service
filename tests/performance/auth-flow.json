{
  "config": {
    "target": "http://localhost:4000",
    "phases": [
      {
        "duration": 60,
        "arrivalRate": 5,
        "rampTo": 20,
        "name": "Warm up"
      },
      {
        "duration": 120,
        "arrivalRate": 20,
        "name": "Sustained load"
      }
    ],
    "defaults": {
      "headers": {
        "Content-Type": "application/json"
      }
    }
  },
  "scenarios": [
    {
      "name": "Auth flow",
      "flow": [
        {
          "post": {
            "url": "/api/auth/register",
            "json": {
              "email": "{{ $randomString() }}@test.com",
              "password": "TestPass123",
              "name": "Test User"
            },
            "capture": {
              "json": "$.refreshToken",
              "as": "refreshToken"
            }
          }
        },
        {
          "post": {
            "url": "/api/auth/login",
            "json": {
              "email": "{{ $randomString() }}@test.com",
              "password": "TestPass123"
            },
            "capture": {
              "json": "$.accessToken",
              "as": "accessToken"
            }
          }
        },
        {
          "get": {
            "url": "/api/auth/me",
            "headers": {
              "Authorization": "Bearer {{ accessToken }}"
            }
          }
        }
      ]
    }
  ]
}